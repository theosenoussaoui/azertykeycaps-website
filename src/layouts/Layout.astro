---
import Navigation from '../components/core/Navigation/Navigation.astro';
import { styles } from './styles.css';
import './../styles/reset.css';

import type {
  ProfileContentfulInterface,
  KeycapArticleContentfulInterface
} from '../lib/contentful';
import type { NavigationLayoutEnum } from '../types/enum';
import { Schema } from 'astro-seo-schema';
import { pwaInfo } from 'virtual:pwa-info';

export interface Props {
  layout: NavigationLayoutEnum;
  title: string;
  description?: string;
  navigationLinks?: Array<
    Omit<
      ProfileContentfulInterface,
      'description' | 'displayHomePage' | 'thumbnail'
    >
  >;
  additionalSeoInfo?: Partial<{
    canonical: string;
    articles: Array<KeycapArticleContentfulInterface>;
  }>;
}

const defaultDescription =
  'Azertykeycaps est un site communautaire répertoriant les derniers keysets possédant une compatibilité AZERTY (ou ISO-FR) dans le hobby des claviers mécaniques.';

const { title, description, layout, navigationLinks, additionalSeoInfo } =
  Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    {
      import.meta.env.MODE === 'production' &&
        import.meta.env.SITE === 'https://azertykeycaps.fr' && (
          <script
            async
            src="https://analytics.azertykeycaps.fr/script.js"
            data-website-id="767b5e54-5d36-4f30-b703-9f42086dfbc7"
          />
        )
    }
    {
      additionalSeoInfo?.articles &&
        additionalSeoInfo?.articles?.length > 0 && (
          <>
            {additionalSeoInfo.articles.map((a) => (
              <Schema
                item={{
                  '@context': 'https://schema.org',
                  '@type': 'Product',
                  name: `${a.title}`,
                  image: `${a.img}`,
                  url: `${a.url}`,
                  brand: {
                    '@type': 'Organization',
                    name: `${a.profile.title}`
                  },
                  material: `${a.material}`,
                  offers: {
                    '@type': 'Offer',
                    priceCurrency: 'USD',
                    price: '0'
                  }
                }}
              />
            ))}
          </>
        )
    }
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content={description ? description : defaultDescription}
    />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:site_name" content="Azerty Keycaps" />

    <meta property="og:image" content={`/api/og.png`} />
    <meta name="twitter:image" content={`/api/og.png`} />

    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Azerty Keycaps - Annuaire de keycaps françaises"
    />

    <meta
      property="og:description"
      content={description ? description : defaultDescription}
    />

    <meta property="og:locale" content="fr_FR" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={Astro.site} />
    <meta property="twitter:url" content={Astro.site} />
    <meta
      name="twitter:title"
      content="Azerty Keycaps - Annuaire de keycaps françaises"
    />
    <meta
      name="twitter:description"
      content={description ? description : defaultDescription}
    />

    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="canonical"
      href={`${Astro.site}${
        additionalSeoInfo && additionalSeoInfo.canonical
          ? additionalSeoInfo.canonical
          : ''
      }`}
    />
    <link rel="mask-icon" href="/favicon.svg" color="#FFFFFF" />
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="theme-color" content="#ffffff" />
    <script src="/src/pwa.ts"></script>
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    <title>Azerty Keycaps - {title}</title>
  </head>
  <body>
    <Navigation layout={layout} navigationLinks={navigationLinks} />
    <main class={styles.layout.main}>
      <slot name="main" />
      <slot name="goto" />
    </main>
  </body>
</html>
